<?xml version="1.0"?>
<simulation>
   <project id="sho" series="0">
      <application name="qmcapp" role="molecu" class="serial" version="1.0"/>
   </project>
   <qmcsystem>
      <simulationcell>
         <parameter name="bconds">
            n n n
         </parameter>
      </simulationcell>
      <particleset name="mobile">
         <group name="ball" size="2">
            <attrib name="position" datatype="posArray" condition="0">
              0.0001 -0.0001 0.0002
              1.0001 -0.0001 0.0002
            </attrib>
         </group>
      </particleset>
      <particleset name="trap" size="2">
         <group name="dot">
            <attrib name="position" datatype="posArray" condition="0">
                 0 0 0
                 1 0 0
            </attrib>
         </group>
      </particleset>
      <wavefunction target="mobile" id="psi0"> <!-- id MUST be psi0 -->
         <sposet_builder name="gaussbb" source="trap" transform="yes" type="mo">
           <basisset>
             <atomicBasisSet angular="cartesian" elementType="dot" normalized="yes" type="GTO">
               <grid npts="1001" rf="100" ri="1.e-6" type="log"/>
               <basisGroup l="0" n="1" rid="R0">
                 <radfunc contraction="1.0" exponent="0.5"/>
               </basisGroup>
             </atomicBasisSet>
           </basisset>
           <sposet name="gauss_spo" size="2"/>
         </sposet_builder>
         <hartree_product group="ball" sposet="gauss_spo"/>
      </wavefunction>
      <hamiltonian name="h0" type="generic" target="mobile">
         <extpot type="HarmonicExt"/> <!-- default mass=1.0 and omega=1.0 -->
         <estimator name="skinetic" type="specieskinetic"/>
         <estimator type="latticedeviation" name="latdev" hdf5="no" per_xyz="no"
            target="mobile" tgroup="ball" source="trap" sgroup="dot"/>
      </hamiltonian>
   </qmcsystem>
   <!--
   <qmc method="wftest"/>
   -->
   <qmc method="vmc" move="not_pbyp_or_whatever" target="mobile">
     <parameter name="blocks"> 40 </parameter>
     <parameter name="steps"> 10 </parameter>
     <parameter name="timestep"> 0.8 </parameter>
   </qmc>
</simulation>
